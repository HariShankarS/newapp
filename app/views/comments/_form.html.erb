<%= form_for([post, post.comments.build], remote: true) do |f| %>
  <div class="col-md-10 form-group">
    <%= f.text_field :comment_text, class: "form-control", placeholder: "Add a comment"%>
  </div>
  <div class="col-md-10">
    <%= f.submit :Create, class: "btn btn-raised btn-info create-comment"%>
  </div>
<% end %>